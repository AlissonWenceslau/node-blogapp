<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mt-4">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <small>{{conteudo}} |</small>
            Categoria: {{categoria.nome}} 
            <br>
            <small>Data: {{data}}</small>
            <br>
           <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar postagem</button></a>
           <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-2">Deletar postagem</button></a>

        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma postagem registrada</h4>
{{/each}}