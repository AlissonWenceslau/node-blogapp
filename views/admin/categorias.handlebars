<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success mt-4">Nova categoria</button></a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small><br>
            <small>{{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button type="button" class="btn btn-success mt-4">Editar categoria</button></a>
            <form action="/admin/categorias/deletar/{{_id}}" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
            </form>         
        </div>
    </div>
{{else}}
    <h4>Nenhuma categoria para ser mostrada</h4>
{{/each}}